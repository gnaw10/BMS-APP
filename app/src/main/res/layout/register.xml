<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editRegisterEmail"
        android:layout_toLeftOf="@+id/editRegisterEmail"
        android:layout_toStartOf="@+id/editRegisterEmail"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editRegisterUsername"
        android:layout_alignLeft="@+id/editRegisterUsername"
        android:layout_alignStart="@+id/editRegisterUsername"
        android:id="@+id/editRegisterPassword"
        android:hint="password"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editRegisterEmail"
        android:layout_below="@+id/editRegisterPassword"
        android:layout_alignLeft="@+id/editRegisterPassword"
        android:layout_alignStart="@+id/editRegisterPassword"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editRegisterPhone"
        android:layout_below="@+id/editRegisterEmail"
        android:layout_alignLeft="@+id/editRegisterEmail"
        android:layout_alignStart="@+id/editRegisterEmail"
        android:hint="phone"
        android:inputType="phone" />


    <TextView
        android:text="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/editRegisterPhone"
        android:layout_alignBottom="@+id/editRegisterPhone"
        android:layout_alignRight="@+id/text_username"
        android:layout_alignEnd="@+id/text_username"
        android:layout_alignLeft="@+id/text_username"
        android:layout_alignStart="@+id/text_username" />

    <TextView
        android:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/editRegisterUsername"
        android:layout_alignBottom="@+id/editRegisterUsername"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_username"
        android:layout_alignBaseline="@+id/editRegisterEmail"
        android:layout_alignBottom="@+id/editRegisterEmail"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editRegisterUsername"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="username" />

    <TextView
        android:text="gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/switchRegisterGender"
        android:layout_alignBottom="@+id/switchRegisterGender"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/editRegisterPhone"
        android:layout_alignRight="@+id/editRegisterPhone"
        android:layout_alignEnd="@+id/editRegisterPhone"
        android:layout_alignBottom="@+id/switchRegisterGender" />

    <TextView
        android:text="male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/editRegisterPhone"
        android:layout_alignLeft="@+id/editRegisterPhone"
        android:layout_alignStart="@+id/editRegisterPhone"
        android:layout_alignBottom="@+id/switchRegisterGender" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchRegisterGender"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_below="@+id/editRegisterPhone"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:text="注册"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
